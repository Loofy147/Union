{
  "__inputs": [],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.5.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "API Request Latency (p99)",
      "type": "graph",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_requests_latency_seconds_bucket{job='unified-ai-api'}[5m])) by (le))",
          "legendFormat": "p99 Latency",
          "refId": "A"
        }
      ]
    },
    {
      "title": "API Request Rate",
      "type": "graph",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job='unified-ai-api'}[5m]))",
          "legendFormat": "Request Rate",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Cache Hit Rate (Placeholder)",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(cache_hits_total[5m])) / (sum(rate(cache_hits_total[5m])) + sum(rate(cache_misses_total[5m]))) * 100",
          "legendFormat": "Cache Hit %"
        }
      ],
      "description": "NOTE: This requires custom metrics for cache hits/misses."
    },
    {
      "title": "Recall @ K (Placeholder)",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "targets": [
        {
          "expr": "avg(recall_at_10)",
          "legendFormat": "Recall@10"
        }
      ],
      "description": "NOTE: This requires a custom metric from an evaluation job."
    },
    {
      "title": "Training Loss (Placeholder)",
      "type": "graph",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "targets": [
        {
          "expr": "avg(training_loss{job='model-trainer'})",
          "legendFormat": "InfoNCE Loss"
        }
      ],
      "description": "NOTE: This requires the training job to export metrics to Prometheus."
    }
  ],
  "refresh": "5s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["ai-platform"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
